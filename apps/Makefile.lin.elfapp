.PHONY: all
all: $(TARGET)

$(TARGET): $(OBJS) Makefile
	mv $(OBJS) $(TARGET)
#	ld.lld $(LDFLAGS) -o $@ $(OBJS) -lc -lm # -lc++abi -lc++

%.o: %.c Makefile
	gcc $(CPPFLAGS) $(CFLAGS) $< -o $@ -v -Wl,--image-base=0x40000000 

%.o: %.cpp Makefile
	g++ $(CPPFLAGS) $(CXXFLAGS) $< -o $@ -v -Wl,--image-base=0x40000000

