CPFLAG += -I. -D__SCLE
CPPFLAGS =
CFLAGS   = -Og -Wall -g -static -fuse-ld=lld -z norelro -L/lib/x86_64-linux-gnu
CXXFLAGS = -Og -Wall -g -static -fuse-ld=lld -z norelro -L/lib/x86_64-linux-gnu

# CC = gcc # Cンパイラーを指定
# CXX = g++ # C++コンパイラーを指

